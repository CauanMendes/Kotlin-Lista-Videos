<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Thumbnail do Vídeo -->
    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="fitCenter"
        android:background="@color/itemBackground"
        android:contentDescription="@string/thumbnail_video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/tvSelecionarImagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clique_para_selecionar_imagem"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/imgThumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Título do Vídeo -->
    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_titulo"
        android:inputType="textCapSentences"
        android:backgroundTint="#689F38"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelecionarImagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Canal -->
    <EditText
        android:id="@+id/edtCanal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_canal"
        android:inputType="textCapSentences"
        android:backgroundTint="#689F38"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Duração -->
    <EditText
        android:id="@+id/edtDuracao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_duracao"
        android:inputType="text"
        android:backgroundTint="#689F38"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtCanal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- URL do Vídeo -->
    <EditText
        android:id="@+id/edtUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_url"
        android:inputType="textUri"
        android:backgroundTint="#689F38"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtDuracao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Descrição -->
    <EditText
        android:id="@+id/edtDescricao"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="@string/hint_descricao"
        android:inputType="textMultiLine|textCapSentences"
        android:gravity="top"
        android:drawablePadding="12dp"
        android:backgroundTint="#689F38"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão Salvar -->
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/salvar_video"
        android:textSize="18sp"
        android:backgroundTint="@color/itemBackground"
        android:textColor="@color/textPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/edtDescricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btnvoltar"
        android:textSize="18sp"
        android:backgroundTint="@color/itemBackground"
        android:textColor="@color/textPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnSalvar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>